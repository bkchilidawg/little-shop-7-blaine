<%= form_for [@merchant, @item], url: "/merchants/#{@merchant.id}/items/#{@item.id}", method: :patch do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :unit_price %>
    <%= f.text_field :unit_price %>
  </div>
  <%= f.submit "Submit" %>
<% end %>
