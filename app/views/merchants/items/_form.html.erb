<%= form_for what_is_the_form_for, url: path, method: method do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name%>

  <%= f.label :description %>
  <%= f.text_area :description%>

  <%= f.label :unit_price %>
  <%= f.number_field :unit_price%>

  <%= f.label :active %>
  <%= f.check_box :active %>

  <%= f.submit "Submit" %>
<% end %>
