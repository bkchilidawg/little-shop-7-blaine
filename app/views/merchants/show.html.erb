<h1>Ahoy Matey!</h1>


<h2>Name: <%= @merchant.name %></h2>

<h2>Merchant </h2>

<h3><%= link_to "Merchant Items Index", "/merchants/#{@merchant.id}/items" %></h3>
<h3><%= link_to "Merchant Invoices Index", "/merchants/#{@merchant.id}/invoices" %></h3>

<section id="items_shipped">
  <ul>
    <% @merchant.items_to_ship.each do |item| %>

      <li>
        <%= item.name %>
        <%= link_to item.invoice_id, "/merchants/#{@merchants.id}/invoices/#{item.invoice_id}"%>
        <%= item.invoice_created_at.strftime("%A, %B %d, %Y") %>
      </li>
    <% end %>
  </ul>
</section>